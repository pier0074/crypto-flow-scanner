# Exchange Configuration
EXCHANGE=binance
# Comma-separated list of trading pairs
SYMBOLS=BTC/USDT,ETH/USDT,BNB/USDT,SOL/USDT,XRP/USDT,ADA/USDT,AVAX/USDT,DOT/USDT,MATIC/USDT,LINK/USDT

# Timeframes to monitor (comma-separated)
TIMEFRAMES=1m,5m,15m,1h,4h,1d

# Email Notification Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=your-email@gmail.com
SEND_NOTIFICATIONS=true

# Trading Parameters
# Position size as percentage of capital
POSITION_SIZE_PERCENT=2.0
# Maximum risk per trade as percentage of capital
MAX_RISK_PERCENT=1.0
# Stop loss multiplier (ATR-based)
STOP_LOSS_ATR_MULTIPLIER=1.5
# Take profit multiplier (risk-reward ratio)
TAKE_PROFIT_RR_RATIO=2.0

# FVG (Fair Value Gap) Detection Settings
# Minimum gap size as percentage of price
FVG_MIN_GAP_PERCENT=0.1
# Maximum age of FVG in candles before it's considered invalid
FVG_MAX_AGE_CANDLES=50
# Require volume confirmation
FVG_VOLUME_CONFIRMATION=true

# Confluence Settings
# Minimum number of timeframes that must align for a signal
MIN_TIMEFRAME_CONFLUENCE=3

# Backtesting Settings
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-01
BACKTEST_INITIAL_CAPITAL=10000

# Data Collection
# Number of days of historical data to fetch initially
INITIAL_HISTORICAL_DAYS=90
# Data update interval in seconds (for live scanning)
UPDATE_INTERVAL_SECONDS=60

# Web Dashboard
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_flow_scanner.log

# Database
DATABASE_URL=sqlite:///data/crypto_flow_scanner.db
